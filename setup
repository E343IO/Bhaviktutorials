#!/bin/bash

#########
# COLORS
#########

#colors
#colors
white="\033[1;37m"                                          ##
grey="\033[0;37m"                                           ##
purple="\033[1;35m"                                         ##
red="\033[1;31m"                                            ##
green="\033[1;32m"                                          ##
yellow="\033[1;33m"                                         ##
purple="\033[0;35m"                                         ##
cyan="\033[0;36m"                                           ##
cyan1="\033[1;36m"                                          ##
cafe="\033[0;33m"                                           ##
fiuscha="\033[0;35m"                                        ##
blue="\033[1;34m"                                           ##
l_red="\033[1;37;41m"                                       ##
nc="\033[0m"                                                ## 

arch=`uname -m`
clear
cd $HOME
cd
rm -rf shark
pkg install ncurses-utils -y &> /dev/null
#spinner
spinner() {
        pid=$!
        spin='\|/-'
        i=0
        tput civis
        while kill -0 $pid 2>/dev/null
	do
                i=$(( (i+1) %4 ))
                printf "\r${cyan1}[${spin:$i:1}]${nc} ${cyan1} $launch"
                sleep .1
	done
        printf "\r   ${green}[âœ”]${nc} ${green} $splashdown";echo
        tput cnorm
}

function os () {
	cat /etc/os-release > /dev/null 2>&1
	if [ "$?" -eq "0" ]; then
		OS=DEBIAN 
		BIN="/usr/bin"
		main="/usr/share/shark"
		ngrk="$BIN/ngrok"
	else
		OS=TERMUX
		BIN="${PREFIX}/bin"
		main="${PREFIX}/share/shark"
		ngrk="$BIN/ngrok"
		pkg install ncurses-utils -y >/dev/null 2&>1
	fi
}

function git_clone() {
	launch="cloning shark";splashdown="shark cloned";echo
	[ -d "${main}" ] && rm -rf ${main} > /dev/null 2>&1
	(git clone https://github.com/Bhaviktutorials/shark --quiet ${main}) & spinner
}


function dependencies() {
        launch="installing lib";splashdown="installed lib"; echo
	for i in apache2 php jq curl wget; do					
    		if [ ${OS} != "DEBIAN" ]; then	
    			(pkg update -y > /dev/null 2&>1 && pkg install ${i} -y > /dev/null 2&>1) & spinner
		else
			(sudo apt-get install ${i} -y > /dev/null 2&>1) & spinner
		fi
	done
}


function ngrk_set() {
echo ""
if [ -f "$ngrk" ]; then
printf ${green}"ngrok is detected \n"
echo
sleep 2
printf "no need to download ngrok just turn on hotspot! \n"
echo
sleep 2
fnltouchup
else
setup_ngrok
fi
}

function setup_ngrok() {
	       if [[ ("$arch" == *'arm'*) || ("$arch" == *'Android'*) ]]; then
	        echo ""
                printf ${red}"ngrok not detected \n"
		sleep 0.5
		printf ${green}"Installng ngrok... \n"
		sleep 0.5
		ngrok_url="https://github.com/Linux-Droid/Ngrok/raw/master/Ngrok_Linux_Droid.zip"
		elif [[ "$arch" == *'aarch64'* ]]; then
			ngrok_url="https://github.com/Linux-Droid/Ngrok/raw/master/Ngrok_Linux_Droid.zip"
		elif [[ "$arch" == *'x86_64'* ]]; then
			ngrok_url="https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip"
		else
			ngrok_url="https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-386.zip" 
		fi
		launch="installing ngrok";splashdown="installed ngrok";echo
		(wget --quiet ${ngrok_url} -O ngrok.zip) & spinner
		unzip -q ngrok.zip && rm -rf ngrok.zip && chmod +x ngrok && mv ngrok $BIN
		final_touchup
}

function fnltouchup() {
for i in shark; do
                chmod +x ${main}/${i}
                mv ${main}/${i} ${BIN}
                printf "\n${green}>>${white} simply run : shark \n\n ${nc}"
        done
}

function final_touchup() {
	for i in shark; do
		chmod +x ${main}/${i}
		mv ${main}/${i} ${BIN}
		printf "\n${green}>>${white} simply run : shark \n\n ${nc}"
	done
	
       if [ ${OS} = DEBIAN ]; then
		printf "\n\n $yellow Just paste your Ngrok Authtoken to continue [Ex. ngrok authtoken I7QUQ ] : ... don't use ./ before the token $nc  \n"
		read ngrok_authtoken 
		$ngrok_authtoken > /dev/null 2&>1
      elif [ ${OS} = TERMUX ]; then
                read -p $'ur authtoken: \n ./' token
                $token &> /dev/null

      else 
      sleep 0.5
      echo "step-1 :-Do setup your ngrok just by pasting authtoken manually! \nstep-2 :-Go and sign-up to ðŸ‘‰ ngrok.io ðŸ‘ˆ and get your authtoken from dashboard copy the authtoken without this ðŸ‘‰ ./ ðŸ‘ˆ \nstep-3:- Now paste authtoken to your terminal \nstep-4 :- Enjoy The best Phishing tool!"
     

fi
}



os
#dependencies
#git_clone
ngrk_set

